{
    "layer": "top",
    "position": "top",
    "height": 42,
    "spacing": 8,
    "margin-top": 8,
    "margin-left": 12,
    "margin-right": 12,
    "margin-bottom": 0,
    
    "modules-left": [
        "custom/arch-logo",
        "sway/workspaces",
        "sway/window"
    ],
    
    "modules-center": [
        "custom/updates",
        "cpu",
        "memory",
        "temperature",
        "disk"
    ],
    
    "modules-right": [
        "custom/gaming-mode",
        "custom/spotify",
        "wireplumber",
        "network",
        "bluetooth",
        "idle_inhibitor",
        "custom/keybinds",
        "custom/power-menu",
        "clock"
    ],

    // Left modules
    "custom/arch-logo": {
        "format": "󰣇",
        "tooltip": false,
        "on-click": "nwg-drawer",
        "on-click-right": "python3 ~/.config/sway/scripts/tokyonight_welcome.py"
    },

    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1:Terminal": "",
            "2:Web": "󰈹",
            "3:Creative": "󰄄",
            "4:Gaming": "󰊴",
            "5:Music": "󰝚",
            "6:Files": "󰉋",
            "7:Social": "󰙯",
            "8:VM": "󰒋",
            "9:Monitor": "󰍹",
            "10:Misc": "󰊢",
            "urgent": "",
            "focused": "",
            "default": ""
        },
        "persistent-workspaces": {
            "1:Terminal": [],
            "2:Web": [],
            "3:Creative": [],
            "4:Gaming": [],
            "5:Music": []
        }
    },

    "sway/window": {
        "format": "{}",
        "max-length": 50,
        "rewrite": {
            "(.*) — Mozilla Firefox": " $1",
            "(.*) - Visual Studio Code": "󰨞 $1",
            "GIMP(.*)": "󰄄 GIMP",
            "Steam": "󰓓 Steam",
            "Spotify": "󰓇 Spotify"
        }
    },

    // Center modules
    "custom/updates": {
        "format": "󰚰 {}",
        "exec": "checkupdates | wc -l",
        "interval": 3600,
        "tooltip": true,
        "tooltip-format": "Click to update system",
        "on-click": "alacritty -e 'sudo pacman -Syu'"
    },

    "cpu": {
        "interval": 2,
        "format": " {usage}%",
        "max-length": 10,
        "on-click": "alacritty -e htop"
    },

    "memory": {
        "interval": 2,
        "format": " {used:0.1f}G",
        "tooltip": true,
        "tooltip-format": "Memory: {used:0.1f}G/{total:0.1f}G ({percentage}%)\nSwap: {swapUsed:0.1f}G/{swapTotal:0.1f}G",
        "on-click": "alacritty -e htop"
    },

    "temperature": {
        "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}°C",
        "format-icons": ["", "", "", "", ""],
        "tooltip": true,
        "tooltip-format": "GPU Temperature: {temperatureC}°C"
    },

    "disk": {
        "interval": 30,
        "format": "󰋊 {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "tooltip-format": "Disk Usage: {used}/{total} ({percentage_used}%)",
        "on-click": "thunar"
    },

    // Right modules
    "custom/gaming-mode": {
        "format": "{}",
        "exec": "if [ -f /tmp/matt_gaming_mode ]; then echo '󰊴 GAME'; else echo '󰊴'; fi",
        "interval": 1,
        "tooltip": true,
        "tooltip-format": "Click to toggle gaming mode",
        "on-click": "~/.config/eww/scripts/toggle_gaming_mode.sh",
        "on-click-right": "eww open gamelauncher"
    },

    "custom/spotify": {
        "format": "󰓇 {}",
        "max-length": 30,
        "exec": "playerctl --player=spotify metadata --format '{{ title }} - {{ artist }}' 2>/dev/null || echo 'Not playing'",
        "exec-if": "pgrep spotify",
        "interval": 2,
        "on-click": "playerctl --player=spotify play-pause",
        "on-click-right": "spotify",
        "on-scroll-up": "playerctl --player=spotify next",
        "on-scroll-down": "playerctl --player=spotify previous"
    },

    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "󰖁 Muted",
        "format-icons": {
            "headphone": "",
            "hands-free": "󰋎",
            "headset": "󰋎",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },

    "network": {
        "interface": "wlan0",
        "format-wifi": "󰤨 {signalStrength}%",
        "format-ethernet": "󰈀 Connected",
        "format-disconnected": "󰤭 Disconnected",
        "tooltip": true,
        "tooltip-format-wifi": "WiFi: {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nSpeed: {frequency}MHz",
        "tooltip-format-ethernet": "Ethernet: {ifname}\nIP: {ipaddr}",
        "on-click": "nm-connection-editor"
    },

    "bluetooth": {
        "format": "󰂯",
        "format-disabled": "󰂲",
        "format-connected": "󰂱 {device_alias}",
        "format-connected-battery": "󰂱 {device_alias} ({device_battery_percentage}%)",
        "tooltip": true,
        "tooltip-format": "Bluetooth: {status}",
        "tooltip-format-connected": "Connected to: {device_enumerate}",
        "on-click": "blueman-manager",
        "on-click-right": "rfkill toggle bluetooth"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "󰅶",
            "deactivated": "󰾪"
        },
        "tooltip": true,
        "tooltip-format-activated": "Idle inhibitor: ON",
        "tooltip-format-deactivated": "Idle inhibitor: OFF"
    },

    "custom/keybinds": {
        "format": "󰌌",
        "tooltip": true,
        "tooltip-format": "Keybinding Cheatsheet\n\nSuper+Return: Terminal\nSuper+D: App Launcher\nSuper+G: Gaming Mode\nSuper+Shift+G: Game Launcher\nSuper+L: Lock Screen\nSuper+P: Photography Mode\nSuper+T: Theme Switcher\nSuper+F1/F2/F3: Quick Games",
        "on-click": "python3 ~/.config/sway/scripts/tokyonight_welcome.py"
    },

    "custom/power-menu": {
        "format": "󰐥",
        "tooltip": false,
        "on-click": "~/.config/rofi/scripts/powermenu.sh"
    },

    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "format-alt": "{:%A, %B %d, %Y}",
        "tooltip": true,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#7aa2f7'><b>{}</b></span>",
                "days": "<span color='#c0caf5'><b>{}</b></span>",
                "weeks": "<span color='#9aa5ce'><b>W{}</b></span>",
                "weekdays": "<span color='#7dcfff'><b>{}</b></span>",
                "today": "<span color='#f7768e'><b><u>{}</u></b></span>"
            }
        }
    }
}
